{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "lib": ["es2016", "dom"],
    "rootDirs": ["src"],
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "target": "es2016",
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["./*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}