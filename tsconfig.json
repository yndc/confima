{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["es2016", "dom"],
    "rootDirs": ["src"],
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "target": "es2016",
    "removeComments": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}